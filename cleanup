#!/bin/bash

sudo ex +"%s@DPkg@//DPkg" -cwq /etc/apt/apt.conf.d/70debconf > /dev/null 2>&1
sudo dpkg-reconfigure debconf -f noninteractive -p critical > /dev/null 2>&1

apt -y update
apt -y  install  build-essential
apt -y  purge shark-isobuild
apt -y  autoremove
echo "GRUB_GFXMODE=1024x768x32" >> /etc/default/grub
echo "GRUB_GFXPAYLOAD_LINUX=keep" >> /etc/default/grub
apt -y install linux-generic-hwe-16.04
update-grub


