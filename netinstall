#!/bin/bash
cd /tmp
wget -O /tmp/start.deb sharklinux.net/focal.deb; sudo dpkg -i /tmp/start.deb; sudo apt update; sudo apt -y install -f
sudo apt -y update
rm start.deb

sudo ex +"%s@DPkg@//DPkg" -cwq /etc/apt/apt.conf.d/70debconf > /dev/null 2>&1
pkg install  screenie mate-desktop-environment-extras variety gimp thunderbird google-chrome-stable dropbox synaptic snapd vlc x11vnc filezilla xvfb obsidian-icon-theme adapta-gtk-theme sharklinux-lxdgui sharklinux-multipass sharklinux-default-settings virt-manager qemu-kvm qemu libreoffice gigolo 
pkg purge gdm3
pkg install sharkdm
echo "SharkLinux" > /etc/hostname
echo "SharkLinux" >> /etc/hosts
sudo usermod -u 499 libvirt-qemu    
find / -user $(id -u libvirt-qemu) -exec chown -h 499 {} \; > /dev/null 2>&1
exit 0



