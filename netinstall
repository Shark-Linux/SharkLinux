#!/bin/bash
apt update
wget sharklinux.net/focal.deb; dpkg -i *.deb; apt -y -f install
pkg refresh
mkdir /srv/local-apt-repository
aria2c --conf-path=/usr/share/SharkLinux/.pkgmr/aria2.conf http://sharklinuxos.org/current/sharklinux.tar.gz -d  /srv/local-apt-repository
cd /srv/local-apt-repository
tar -xf sharklinux*
rm *.gz
pkg install local-apt-repository
#!/bin/bash
pkg upgrade
cd /tmp

pkg install --reinstall screenie mate-desktop-environment-extras variety gimp thunderbird google-chrome-stable dropbox synaptic vlc x11vnc filezilla xvfb obsidian-icon-theme adapta-gtk-theme sharklinux-lxdgui sharklinux-multipass sharklinux-default-settings qemu-kvm qemu libreoffice gigolo 
pkg purge gdm3
pkg install --reinstall shark-core sharkdm


cat> settings <<EOF
